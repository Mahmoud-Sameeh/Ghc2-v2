                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="SSN" asp-for="Input.SSN" placeholder="Enter SSN" >
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="pwd">Password:</label>
                        <div class="col-sm-10">
                            <input type="password" class="form-control"  asp-for="Input.Password" id="pwd" placeholder="Enter password">
                            <input asp-for="Input.Role" style="display:none" value="Patient" class="form-control" />
                            <input asp-for="Input.UserName" style="display:none" value="258741339" class="form-control" />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" id="patient" class="btn btn-block btnlogin">Login</button>
