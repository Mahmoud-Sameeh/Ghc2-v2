                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="username" asp-for="Input.UserName" placeholder="Enter username" >
                            <input asp-for="Input.Role" style="display:none" value="Doctor" class="form-control" />
                            <input asp-for="Input.SSN" style="display:none" value="258741339" class="form-control" />

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="pwd">Password:</label>
                        <div class="col-sm-10">
                            <input type="password" class="form-control" id="pwd" asp-for="Input.Password" placeholder="Enter password" >
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <div class="checkbox">
