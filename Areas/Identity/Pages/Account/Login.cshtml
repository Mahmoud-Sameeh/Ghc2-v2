@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<style>



    .tab {
        overflow: hidden;
        background-color: #0062CC;
        width: 242px;
        border-radius: 15px;
    }

        /* Style the buttons inside the tab */
        .tab button {
            background-color: #0062CC;
            float: left;
            border: none;
            outline: none;
            cursor: pointer;
            padding: 10px 4px;
            transition: 0.3s;
            font-size: 17px;
            width: 80px;
            color: white;
            font-family: monospace;
        }

            /* Change background color of buttons on hover */
            .tab button:hover {
                font-size: 20px;
            }

            /* Create an active/current tablink class */
            .tab button.active {
                background-color: white;
                border-radius: 15px;
                border: 1px solid #0062CC;
                color: #0062CC;
            }

    /* Style the tab content */
    .tabcontent {
        display: none;
        padding: 6px 4px;
        border: 1px solid white;
        border-top: none;
    }



    #Admin {
        background-color: white;
        border-radius: 100px 220px 220px 30px;
        border: 1px dotted dodgerblue;
    }

    #Doctor {
        background-color: white;
        border-radius: 100px 220px 220px 30px;
        border: 1px dotted dodgerblue;
    }

    #Patient {
        background-color: white;
        border-radius: 100px 220px 220px 30px;
        border: 1px dotted dodgerblue;
    }

    h3 {
        color: #0062CC;
        font-family: Verdana, Geneva, Tahoma, sans-serif;
        font-style: inherit;
        padding-top: 20px;
        font-weight: bold;
    }

    #Patientimage {
        border-radius: 20% 15%;
        width: 100%;
    }

    #adminimage {
        padding-top: 45px;
        height: 300px;
    }

    #doctorimage {
        padding-top: 20px;
        border-radius: 20px;
        width: 70%;
    }

    .cont {
        background-color: #0062CC;
        border: 1px double lightgrey;
        margin: auto;
        margin-top: 60px;
        border-radius: 48px 33px 220px 30px;
        perspective: 500px;
        width: 50%;
        max-width: 70%;
    }

    .tablinks {
        width: 33.33%;
    }

    .btnlogin {
        background-color: #0062CC;
        color: white;
        font-family: monospace;
    }
</style>

<div class="cont">
    <div class="tab" style="width:100%">
        <button class="tablinks " onclick="openForm(event, 'Admin')" style="width:33%" id="btn1">Admin</button>
        <button class="tablinks " onclick="openForm(event, 'Doctor')" style="width:33%">Doctor</button>
        <button class="tablinks " onclick="openForm(event, 'Patient')" style="width:33%">Patient</button>
    </div>

    <div id="Admin" class="tabcontent tab-content">
        <!-- <h3 class="text-center">Admin</h3>
        <br> -->
        <div class="row">
            <div class="col-4 text-center">
