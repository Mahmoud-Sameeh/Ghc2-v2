@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GHC2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @*<link rel="stylesheet" href="~/css/site.css" />*@


    <!-- Vendor CSS Files -->
    <link href="~/nermen/vendor/animate.css/animate.min.css" rel="stylesheet">
    <link href="~/nermen/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/nermen/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/nermen/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/nermen/vendor/fontawesome-free/css/all.min.css" rel="stylesheet">
    <link href="~/nermen/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/nermen/vendor/remixicon/remixicon.css" rel="stylesheet">
    <link href="~/nermen/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">


    @*<link rel="stylesheet" href="~/css/site.css" />*@
    <link href="~/nermen/css/style.css" rel="stylesheet" />

</head>
<body>
    <!-- ======= Top Bar ======= -->
    <div id="topbar" class="d-flex align-items-center fixed-top">
        <div class="container d-flex justify-content-between">
            <div class="contact-info d-flex align-items-center">
                <i class="bi bi-envelope"></i> <a href="mailto:contact@example.com">contact@example.com</a>
                <i class="bi bi-phone"></i> +1 5589 55488 55
            </div>
            <div class="d-none d-lg-flex social-links align-items-center">
                <a href="#" class="twitter"><i class="bi bi-twitter"></i></a>
                <a href="#" class="facebook"><i class="bi bi-facebook"></i></a>
                <a href="#" class="instagram"><i class="bi bi-instagram"></i></a>
                <a href="#" class="linkedin"><i class="bi bi-linkedin"></i></a>
            </div>
        </div>
    </div>
    <!-- ======= Header ======= -->
    <header id="header" class="fixed-top">
        <div class="container d-flex align-items-center">

            @*<h1 class="logo me-auto"><a href="index.html">GHC</a></h1>*@
            <div>
                <img class="has-icon" src="/nermen/img/logo2.png" style="height:100px" ; />

            </div>

            <!-- Uncomment below if you prefer to use an image logo -->
            <!-- <a href="index.html" class="logo me-auto"><img src="assets/img/logo.png" alt="" class="img-fluid"></a>-->

            <nav id="navbar" class="navbar order-last order-lg-0 navbar-expand">
                <ul>
                    <li><a class="nav-link scrollto active" href="#hero">@localizer["Home"]</a></li>
                    <li><a class="nav-link scrollto" href="#about">@localizer["About"]</a></li>
                    <li><a class="nav-link scrollto" href="#services">@localizer["Services"]</a></li>
                    <li><a class="nav-link scrollto" href="#departments">@localizer["Departments"]</a></li>
                    <li><a class="nav-link scrollto" href="#doctors">@localizer["Doctors"]</a></li>

                    <li><a class="nav-link scrollto" href="#contact">@localizer["Contact"]</a></li>
                    <li class="nav-link">
                        <partial name="_Culture" />

                    </li>

                </ul>
                <partial name="_LoginPartial" />
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav><!-- .navbar -->
        </div>
    </header><!-- End Header -->


    <div class="container-fluid bg-light">
        <main role="main" class="pb-3" style="padding-top:160px;">
            @RenderBody()
        </main>
    </div>


    <!-- ======= Footer ======= -->
    <footer id="footer">

        <div class="footer-top">
            <div class="container">
                <div class="row">

                    <div class="col-lg-3 col-md-6 footer-contact">
                        <h3>GHC</h3>
                        <p>
                            @localizer["Nasser Street"] <br>
                            @localizer["EL_minia"]<br>
                            @localizer["Egypt"] <br><br>
                         <strong>@localizer["Phone"]:</strong> +1 5589 55488 55<br>
                         <strong>@localizer["Email"]:</strong> info@example.com<br>
                        </p>
                    </div>

                    <div class="col-lg-2 col-md-6 footer-links">
                        <h4>@localizer["Useful Links"]</h4>
                        <ul>
                            <li><i class="bx bx-chevron-right"></i> <a href="#">@localizer["Home"]</a></li>
                            <li><i class="bx bx-chevron-right"></i> <a href="#">@localizer["About"]</a></li>
                            <li><i class="bx bx-chevron-right"></i> <a href="#">@localizer["Services"]</a></li>
                            <li><i class="bx bx-chevron-right"></i> <a href="#">@localizer["Terms of service"]</a></li>
                            <li><i class="bx bx-chevron-right"></i> <a href="#">@localizer["Privacy policy"]</a></li>
                        </ul>
                    </div>

                    <div class="col-lg-3 col-md-6 footer-links">
                        <h4>@localizer["Our Services"]</h4>
                        <ul>
                            <li><i class="bx bx-chevron-right"></i> <a href="#">@localizer["hourh"]</a></li>
                            <li><i class="bx bx-chevron-right"></i> <a href="#">@localizer["Scientific research"]</a></li>
                            <li><i class="bx bx-chevron-right"></i> <a href="#">@localizer["research"]</a></li>
                            @*<li><i class="bx bx-chevron-right"></i> <a href="#">@localizer["Marketing"]</a></li>
                            <li><i class="bx bx-chevron-right"></i> <a href="#">@localizer["Graphic Design"]</a></li>*@
                        </ul>
                    </div>

                    <div class="col-lg-4 col-md-6 footer-newsletter">
                        <h4>@localizer["Join Our Newsletter"]</h4>
                        <p>@localizer["You can follow our news"]</p>
                        <form action="" method="post">
                            <input type="email" name="email"><input type="submit" value=@localizer["Subscribe"]>
                        </form>
                    </div>

                </div>
            </div>
        </div>

        <div class="container d-md-flex py-4">

            <div class="me-md-auto text-center text-md-start">
                <div class="copyright">
                    &copy; @localizer["Copyright"] <strong><span>GHC</span></strong>. @localizer["All Rights Reserved"]
                </div>
                <div class="credits">
                    <!-- All the links in the footer should remain intact. -->
                    <!-- You can delete the links only if you purchased the pro version. -->
                    <!-- Licensing information: https://bootstrapmade.com/license/ -->
                    <!-- Purchase the pro version with working PHP/AJAX contact form: https://bootstrapmade.com/medilab-free-medical-bootstrap-theme/ -->
                    @localizer["Designed by"] <a href="https://bootstrapmade.com/">GHC Team</a>
                </div>
            </div>
            <div class="social-links text-center text-md-right pt-3 pt-md-0">
                <a href="#" class="twitter"><i class="bx bxl-twitter"></i></a>
                <a href="#" class="facebook"><i class="bx bxl-facebook"></i></a>
                <a href="#" class="instagram"><i class="bx bxl-instagram"></i></a>
                <a href="#" class="google-plus"><i class="bx bxl-skype"></i></a>
                <a href="#" class="linkedin"><i class="bx bxl-linkedin"></i></a>
            </div>
        </div>
    </footer><!-- End Footer -->

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
