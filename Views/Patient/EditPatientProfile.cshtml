@model Patient
@{
    ViewData["Title"] = "EditPatientProfile";
    Layout = "~/Views/Shared/_DocotrsLayout.cshtml";
}

<br />
<h4 style="color:gray;font-family:'Times New Roman'">Patient Profile</h4>
<br />
<form method="post" asp-action="EditPatientProfile">
    <div class="container bcontent">
        <div class="card" style="width: 100%;margin:auto;border-top:4px solid gray">
            <div class="row no-gutters">
                <div class="col-md-2">
                    <img class="card-img  rounded-circle CardPhotoPatients" style="margin-left:30%" src="@Url.Content( @Model.ImageUrl)" alt="Suresh Dasari Card">


                </div>
                <div class=" col-md-9 ml-4">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-2">
                                    <input type="hidden" asp-for="@Model.Nid" value="@Model.Nid" />
                                    <label for="name">Name</label>&nbsp;&nbsp;
                                    <input asp-for="@Model.Name"  type="text" class="form-control" placeholder="Patient Name" aria-label="Name" value="@Model.Name" readonly>
                                </div>
                                <div class="form-group mb-2">
                                    <label for="BirthDate">Birth Date</label>&nbsp;&nbsp;
                                    <input type="text" class="form-control" placeholder="BirthDate" aria-label="Age" value="@Model.BitrhDate" readonly>
                                </div>
                                <div class="form-group mb-2">
                                    <label for="Address">Address:</label>&nbsp;&nbsp;
                                    <input asp-for="@Model.Address" required type="text" class="form-control" placeholder="Address" value="@Model.Address" aria-label="Address" >
                                </div>
                                <div class="form-group mb-2">

                                    <div class="form-check">
                                        <label for="Gender" class="mr-5">Gender:</label>
                                        @{ if (Model.Gender.ToLower() == "male")
                                            {<input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1" checked readonly>
                                                <label class="form-check-label" for="flexRadioDefault1">
                                                    Male
                                                </label>
                                            }
                                            else
                                            {

                                                <input class="form-check-input ml-2" type="radio" name="flexRadioDefault" id="flexRadioDefault1" checked readonly>
                                                <label class="form-check-label ml-4" for="flexRadioDefault1">
                                                    Female
                                                </label>
                                            }
                                        }
                                    </div>

                                </div>


                            </div>
                            <div class=" col-md-6">
                                <div class="form-group mb-2">
                                    <label for="Phone">Phone</label>&nbsp;&nbsp;
                                    <input asp-for="@Model.Phone" 
                                           pattern="^01[0-2]\d{1,8}$" 
                                           required
                                           
                                           type="tel"
                                           class="form-control"
                                           placeholder="Phone" 
                                           aria-label="Phone"
                                           value="@Model.Phone" >
                                </div>
                                <div class="form-group mb-2">
                                    <label for="Bloodgroup">BloodGroup:</label>&nbsp;&nbsp;
                                    <input type="text" 
                                           class="form-control"
                                           asp-for="@Model.BloodGroup"

                                           placeholder="BloodGroup" 
                                           aria-label="BloodGroup" readonly>
                                </div>
                                <div class="form-group mb-2">
                                    <label for="email">Email</label>&nbsp;&nbsp;
                                    <input asp-for="@Model.Email" required type="email" class="form-control" placeholder="Email" aria-label="Email" value="@Model.Email" >
                                </div>


                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <br />
    <div class="submit-section proceed-btn text-right mr-4">
        <input type="submit" value="Save" class="btn btn-primary submit-btn" />
        <a asp-action="GetPatientProfileReadonly" asp-route-id="@Model.Nid" class="btn btn-outline-danger submit-btn">Cancel</a>

    </div>
    </form>