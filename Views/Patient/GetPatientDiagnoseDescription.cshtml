                    <label for="Note">Needed Radiations:</label>&nbsp;&nbsp;

                    <input type="text" class="form-control" placeholder="Write Your Need" id="floatingTextarea2" style="height: 50px;width:100%" value="@Model.diagnose.RequiredRadiation" readonly>



