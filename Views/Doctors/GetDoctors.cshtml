<br />
@foreach (var item in Model)
{
    <div class="container bcontent" >
        <div class="card" style="width: 90%;margin:auto ">
            <div class="row no-gutters"style=" border-top: 2px solid #3498db;border-radius:5px">
                <div class="col-md-2">
                    <img class="card-img  rounded-circle CardPhotoPatients" style="margin-left:30%" src="@Url.Content(@item.ImageUrl)" alt="Suresh Dasari Card">
                </div>
                <div class="offset-1 col-md-9">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <ul>
                                    <li>@item.Name</li>
                                    <li>@item.BitrhDate.Value.Date.ToShortDateString()</li>
                                    
                                    <li>@item.Email</li>

                                </ul>
                            </div>
                            <div class=" col-md-6">
                                <ul>
                                    <li>@item.Address</li>
                                    <li>@item.Phone</li>
                                    <li>@item.Gender</li>

                                </ul>
                            </div>
                        </div>
                        <div class="row" style="float:right;margin-top:-25px">
                            <a asp-action="GetDoctorProfile" asp-route-id="@item.Nid" class="btn btn-primary" style="float:right;width:120px;margin-right:1px">View Profile</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
}


