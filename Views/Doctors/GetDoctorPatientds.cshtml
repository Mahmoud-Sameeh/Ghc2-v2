        <div class="col-lg-3 col-md-3 col-sm-2" style="max-width:350px; margin:auto;min-width:300px;">
            <div class="card doctorsCard" style=" border-top: 2px solid #3498db; border-radius: 5px">
                <img class="  rounded-circle CardPhotoPatients" src="@Url.Content(@item.Patient.ImageUrl)" alt="Card image cap">
                <a href="#" style="text-align:center; margin-top:-30px;margin-bottom:15px">@item.Patient.Name</a>
                <div class="card-body " style="margin-top: -30px;">
                    <hr class="doctorsCardHr">
                    <ul>
                        <li>@item.Patient.Phone</li>
                        <li>@item.Patient.Address</li>
                        <li>@item.Patient.Email</li>


                    </ul>
                    <hr class="doctorsCardHr">
                    <div class="text-center">
                        <a type="button" class="btn btn-primary text-center" asp-action="GetPatientProfileReadonly" asp-route-id="@item.PatientId" style="border-radius:4px;padding:4px;margin:auto">View Profile</a>
                        <a type="button" class="btn btn-primary text-center"
                           asp-controller="home"
                           asp-action="CreateRoomauto"
                           asp-route-name="@item.Patient.Name"
                           style="border-radius:4px;padding:4px;margin:auto">Chat</a>
