<script type="text/javascript">
    var frmAdd = document.getElementById("frmAdd");
        var prescriptionTbl = document.getElementById("prescriptionTbl");
        var MedicineSelect = document.getElementById("MedicineSelect");
        var DoseSelect = document.getElementById("DoseSelect");
        var txtNote = document.getElementById("txtNote");
        function AddMedicine() {
            var newTr = document.createElement("tr");
            var MedicineTd = document.createElement("td");
            var DoseTd = document.createElement("td");
            var NoteTd = document.createElement("td");
            var DeleteTd = document.createElement("td");
            var Deletebtn = document.createElement("input");
            Deletebtn.type = "button";
            Deletebtn.className += "btn ";
            Deletebtn.className += "btn-danger ";
            Deletebtn.className += "Delete";
            /* Deletebtn.onclick = "Delete()";*/
            Deletebtn.style = "border-radius:4px;padding:4px;"
            Deletebtn.value = " Delete ";
            DeleteTd.appendChild(Deletebtn);
            newTr.appendChild(MedicineTd);
            newTr.appendChild(DoseTd);
            newTr.appendChild(NoteTd);
            newTr.appendChild(DeleteTd);
            MedicineTd.innerText = MedicineSelect.options[MedicineSelect.selectedIndex].text;
            DoseTd.innerText = DoseSelect.options[DoseSelect.selectedIndex].text;
            NoteTd.innerText = txtNote.value;

            prescriptionTbl.appendChild(newTr);
    }
    
    $('#prescriptionTbl').on('click', 'input[type="button"]', function (e) {
        $(this).closest('tr').remove();
    });

    $("#btnSave").click(function () {
       
        console.log("btnSave Triggered!");
        var VMPatientDiagnosePrescriptionJson = {"PId":"NID", "Description": "text", "Analyses": "analyses", "Rad": "R","prescr":[] };
        var PrescriptionMedicine = new Array();
        $("#prescriptionTbl tr").each(function () {
            var row = $(this);
            var prescriptionMedicine = {};
            prescriptionMedicine.name = row.find("td").eq(0).html();
            prescriptionMedicine.Dose= row.find("td").eq(1).html();
            prescriptionMedicine.Note = row.find("td").eq(2).html();
            PrescriptionMedicine.push(prescriptionMedicine);
        });
        VMPatientDiagnosePrescriptionJson.PId = $('#txtNid').val();
        VMPatientDiagnosePrescriptionJson.Description = $('#Description').val();
        VMPatientDiagnosePrescriptionJson.Analyses = $('#neededAnTxt').val();
        VMPatientDiagnosePrescriptionJson.Rad = $('#txtRad').val();
        VMPatientDiagnosePrescriptionJson.prescr = PrescriptionMedicine;

        console.log(VMPatientDiagnosePrescriptionJson);
        var rr = { pid: "iid" };
        $.ajax({
            type: "POST",
            url: "/Doctors/AddPatientDiagnose",
            data: VMPatientDiagnosePrescriptionJson,
            contentType: "application/x-www-form-urlencoded",
            success: function (data) {
                //url: "/Doctors/GetPatientProfileWithNewDiagnose"
                window.location.href = location.origin+"/Doctors/GetPatientProfileWithNewDiagnose/" + VMPatientDiagnosePrescriptionJson.PId;
                
            }
        });
       /* $.post("/Doctors/AddPatientDiagnose", { data: r })*/
    });

</script>